{
  "name": "task-manager",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "frontend:start": "cd packages/frontend/ && npm run start",
    "frontend:ts": "cd packages/frontend/ && tsc --noEmit",
    "frontend:eslint": "cd packages/frontend/ && npm run eslint",
    "frontend:build": "cd packages/frontend/ && npm run build"
  },
  "engines": {
    "node": ">=16"
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier": "2.8.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/frontend/src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  }
}
